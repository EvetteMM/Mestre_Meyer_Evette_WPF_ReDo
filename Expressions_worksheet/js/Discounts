var discountPercentage = .80;
var salesTaxPercentage = 1.06;
var priceBeforeTax;

priceBeforeTax = (50*.80);
alert(priceBeforeTax);
alert(50*.80);
priceBeforeTax = originalPrice * discountPercentage;
alert(priceBeforeTax)

var priceAfterTax;
priceAfterTax = ((50*.80)*1.06);
alert(priceAfterTax);
alert((50*.80)*1.06);
priceAfterTax = (originalPrice * discountPercentage) * salesTaxPercentage;

